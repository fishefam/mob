{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "noEmit": true,
    "paths": {
      "@browser/*": ["src/browser/*"],
      "@components/*": ["src/browser/components/*"],
      "@node/*": ["src/node/*"],
      "@script-libs/*": ["scripts/libs/*"],
      "@src-libs/*": ["src/libs/*"],
      "@typings/*": ["types/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016"
  },
  "exclude": ["src/assets"]
}
